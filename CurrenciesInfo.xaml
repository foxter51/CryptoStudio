<Page x:Class="TestAssignment.CurrenciesInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestAssignment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrenciesInfo"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0">
            <TextBlock FontWeight="Bold" FontSize="18" Margin="10">Currencies</TextBlock>
            <TextBlock></TextBlock>
            <ListBox Name="CurrenciesListAll" ItemsSource="{Binding}" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="14" Margin="10"></ListBox>
        </Grid>

        <StackPanel Grid.Row="0" Grid.Column="1" DataContext="{Binding ElementName=CurrenciesListAll, Path=SelectedItem}">
            <TextBlock>Price: </TextBlock>
            <TextBox Text="{Binding CurrentPrice, Mode=OneWay}" Focusable="False"></TextBox>
            <TextBlock>Volume: </TextBlock>
            <TextBox Text="{Binding TotalVolume, Mode=OneWay}" Focusable="False"></TextBox>
            <TextBlock>Price change (24H): </TextBlock>
            <TextBox Text="{Binding PriceChange24H, Mode=OneWay}" Focusable="False"></TextBox>
        </StackPanel>
    </Grid>
</Page>
